generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  output        = "../prisma/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ======================
// USER & AUTH
// ======================
model User {
  id           String           @id @default(cuid())
  email        String           @unique
  asgl_id      String           @unique
  name         String
  password     String
  roles        UserRole[]
  datasets     DatasetAccess[]
  documents    DocumentAccess[]
  credits      Credit[]
  creditUsages CreditUsage[]
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model Role {
  id          String           @id @default(cuid())
  name        String           @unique
  permissions RolePermission[]
  users       UserRole[]
}

model Permission {
  id    String           @id @default(cuid())
  name  String           @unique
  roles RolePermission[]
}

// ======================
// RELATION TABLES
// ======================
model UserRole {
  userId String
  roleId String

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

// ======================
// DATASET & DOCUMENT
// ======================
model Dataset {
  id         String          @id @default(cuid())
  dataset_id String          @unique
  name       String          @unique
  parent_id  String?
  parent     Dataset?        @relation("DatasetToParent", fields: [parent_id], references: [id])
  children   Dataset[]       @relation("DatasetToParent")
  documents  Document[]
  accesses   DatasetAccess[]
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model Document {
  id          String           @id @default(cuid())
  document_id String           @unique
  name        String
  type        String
  size        Int
  datasetId   String
  dataset     Dataset          @relation(fields: [datasetId], references: [id])
  accesses    DocumentAccess[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

// ======================
// ACCESS CONTROL
// ======================
// Xác định quyền cụ thể cho từng user trên dataset
model DatasetAccess {
  userId    String
  datasetId String
  canView   Boolean @default(false)
  canEdit   Boolean @default(false)
  canDelete Boolean @default(false)

  user    User    @relation(fields: [userId], references: [id])
  dataset Dataset @relation(fields: [datasetId], references: [id])

  @@id([userId, datasetId])
}

// Xác định quyền cụ thể cho từng user trên document
model DocumentAccess {
  userId     String
  documentId String
  canView    Boolean @default(false)
  canEdit    Boolean @default(false)
  canDelete  Boolean @default(false)

  user     User     @relation(fields: [userId], references: [id])
  document Document @relation(fields: [documentId], references: [id])

  @@id([userId, documentId])
}

// ======================
// CREDIT SYSTEM
// ======================
model Credit {
  id               String    @id @default(cuid())
  userId           String
  month            Int // Tháng (1-12)
  year             Int // Năm
  totalCredits     Int       @default(200) // Tổng credit trong tháng
  usedCredits      Int       @default(0) // Credit đã sử dụng
  remainingCredits Int       @default(200) // Credit còn lại
  lastChatAt       DateTime? // Lần chat cuối cùng
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  creditUsages CreditUsage[]

  @@unique([userId, month, year]) // Đảm bảo mỗi user chỉ có 1 record cho mỗi tháng/năm
}

// ======================
// CREDIT USAGE LOG
// ======================
model CreditUsage {
  id        String   @id @default(cuid())
  userId    String
  creditId  String
  amount    Int      @default(1) // Số credit sử dụng (mặc định 1 cho mỗi chat)
  action    String   @default("chat") // Loại hành động (chat, ...)
  metadata  String? // Thông tin bổ sung (JSON string)
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  credit Credit @relation(fields: [creditId], references: [id])
}
